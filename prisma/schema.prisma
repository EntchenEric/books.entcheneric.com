generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(256)
  author     String   @db.VarChar(256)
  description String? @db.VarChar(4192)
  publicationYear Int 
  wishlisted Boolean  @default(true)
  pages      Int
  progress   Int      @default(0)
  thumbnail  String   @db.VarChar(512)
  ISBNumber  String? @db.VarChar(13)

  googleBookId String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchaseOptions PurchaseOptionCache[]
  lastPurchaseOptionUpdatedAt DateTime @default(dbgenerated("'1970-01-01 00:00:00'"))
}

model User {
  id           String @id @default(ulid())
  url          String @unique
  passwordHash String @db.VarChar(256)
  title         String? @db.VarChar(256)
  description   String? @db.VarChar(4192)

  books        Book[]
}

model PurchaseOptionCache {
  id  String @id @default(uuid())
  bookId String
  Book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  retailerName String @db.VarChar(256)
  price Decimal @db.Decimal(10, 2)
  url String @db.VarChar(512)
}